<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity"
    android:orientation="vertical"
    android:background="@color/BG">

    <!-- 헤더 -->
    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        >
        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/common_backbtn"
            />

        <!--마이페이지-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center"
            android:text="프로필 수정"
            android:textAlignment="center"

            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <!--프로필사진-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile_img"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_img"
            />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#B8B8B8"
            android:ems="10"
            android:hint="모구모구"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#6C6B6B"
            android:textSize="22sp" />
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            >

            <TableRow
                android:paddingBottom="5dp">

                <ImageButton
                    android:id="@+id/btn_e"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:background="@android:color/transparent"
                    android:paddingRight="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ebutton" />

                <ImageButton
                    android:id="@+id/btn_i"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ibutton"
                    android:paddingLeft="20dp"
                    />

            </TableRow>

            <TableRow
                android:paddingBottom="5dp">
                <ImageButton
                    android:id="@+id/btn_s"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sbutton"
                    android:paddingRight="20dp"
                    />
                <ImageButton
                    android:id="@+id/btn_n"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/nbutton"
                    android:paddingLeft="20dp"
                    />

            </TableRow>

            <TableRow
                android:paddingBottom="5dp">
                <ImageButton
                    android:id="@+id/btn_t"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tbutton"
                    android:paddingRight="20dp"
                    />
                <ImageButton
                    android:id="@+id/btn_f"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fbutton"
                    android:paddingLeft="20dp"
                    />

            </TableRow>

            <TableRow
                >
                <ImageButton
                    android:id="@+id/btn_j"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/jbutton"
                    android:paddingRight="20dp"
                    />
                <ImageButton
                    android:id="@+id/btn_p"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pbutton"
                    android:paddingLeft="20dp"
                    />

            </TableRow>
        </TableLayout>

        <ImageButton
            android:id="@+id/btn_register"
            android:layout_width="160dp"
            android:layout_height="67dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/registerbutton"
            android:paddingTop="0dp"
            android:clickable="false"
            />


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>